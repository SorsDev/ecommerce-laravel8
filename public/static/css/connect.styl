body
	background-color #f6f6f6
	margin 0px
	font-size 14px
	
.mtop16
	margin-top 16px
	
.box
	background-color #fff
	border-radius 8px 
	border 1px solid #d6d6d6
	position absolute
	width 500px
	.btn-success
		background-color #16C79E
		border 0px
		width 100% 
	.form-control
		&:focus
		&:active
			outline none
			box-shadow none
	.inside
		padding 16px
	.header
		background-color #F4DC9C
		border-radius 8px 8px 0px 0px
		padding 16px
		a
			img
				display block
				margin 0px auto
				width 36%
	.footer
		text-align center
		a
			display inline-block
			text-decoration none
			font-size .9em
			&:last-child
				margin-left 24px

.box_login 
	left 50%
	top 50%
	transform translate(-50%,-50%)